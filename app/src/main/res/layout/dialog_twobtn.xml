<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="270dp"
        android:layout_height="205dp"
        android:background="@android:color/white"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="160dp"
            android:orientation="vertical">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:gravity="center"
                android:src="@drawable/ic_vote_pop_2"></ImageView>
            <TextView
                android:id="@+id/txt1_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_alignParentTop="true"
                android:gravity="center"
                android:text="투표가 완료 되었습니다."
                android:textColor="@color/colorBlack"
                android:textSize="14sp" />
            <TextView
                android:id="@+id/txt2_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:gravity="center"
                android:text="결제로 이동하시겠습니까?"
                android:textColor="@color/colorBlack"
                android:textSize="14sp"
                android:textStyle="bold"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_alignParentBottom="true"
            android:weightSum="2"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_left"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:background="@color/colorGray6"
                android:gravity="center"
                android:text="아니오. 다른 투표 진행"
                android:textSize="14dp"
                android:textColor="@color/colorWhite"/>

            <Button
                android:id="@+id/btn_right"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:background="@color/colorPrimary"
                android:gravity="center"
                android:text="네"
                android:textSize="14dp"
                android:textColor="@color/colorWhite"/>
        </LinearLayout>
    </RelativeLayout>

</LinearLayout>
